---
interface ContactLink {
  href: string;
  text: string;
}

interface Props {
  imageSrc: string;
  imageAlt: string;
  title: string;
  subtitle: string;
  paragraphs: string[];
  contactLink: ContactLink;
}

const { imageSrc, imageAlt, title, subtitle, paragraphs, contactLink } =
  Astro.props as Props;
