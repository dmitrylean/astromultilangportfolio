---
interface Props {
  categories: string[];
  currentLang: string;
  catDict: Record<string, string>;
}

// Получаем пропсы из родителя
const { categories, currentLang, catDict } = Astro.props;
---

<section class="categories-filter">
  <div class="container">
    <ul class="categories-list">
      <!-- Ссылка на все посты -->
      <li>
        <a href={`/${currentLang}/blog`}>Все</a>
      </li>

      <!-- Список категорий -->
      {
        categories.map((cat) => (
          <li>
            <a href={`/${currentLang}/category/${cat}`}>
              {catDict[cat] ?? cat}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
