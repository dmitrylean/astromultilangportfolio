---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/astro/Header.astro";
import About from "../../components/astro/About.astro";
import Skills from "../../components/astro/Skills.astro";
import translations from "../../data/lang.json";

const { lang } = Astro.params;
const currentLang = (lang || "en") as keyof typeof translations;
const t = translations[currentLang];
const socialLinks = [
  { href: "https://github.com/dmitrylean", icon: "fab fa-github" },
  { href: "https://t.me/dg404_bot", icon: "fa-brands fa-telegram" },
  { href: "https://www.behance.net/adamlean92", icon: "fab fa-behance" },
  {
    href: "https://soundcloud.com/mastamonk36",
    icon: "fa-brands fa-soundcloud",
  },
];
---

<Layout title={t.meta.title} author={t.meta.author}>
  <Header menu={t.menu} />
  <About {...t.aboutData} />
  <Skills {...t.skillsData} />
</Layout>
